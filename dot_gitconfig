[core]
	editor = vim
	excludesfile = /Users/lab-s-yehudat/.gitignore_global
[init]
	defaultBranch = main
[color]
	ui = auto
[submodule]
    recurse = true
[fetch]
    recurseSubmodules = on-demand
[pull]
    recurseSubmodules = on-demand
	ff = only
[status]
    submoduleSummary = true
[diff]
    submodule = log
    tool = gvimdiff
[alias]
	su = submodule update --init --recursive
    br = branch
    co = checkout
	ci = commit
	st = status
    re = restore
	logo = log --oneline --graph --decorate --date=short --abbrev-commit
