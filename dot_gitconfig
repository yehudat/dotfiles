[user]
	name = yehuda
	email = yehuda.tsimanis@gmail.com
[core]
	editor = vim
	excludesfile = /Users/lab-s-yehudat/.gitignore_global
[init]
	defaultBranch = main
[color]
	ui = auto
[submodule]
    recurse = true
[fetch]
    recurseSubmodules = on-demand
    prune = true
[pull]
    recurseSubmodules = on-demand
	ff = only
	rebase = true
[status]
    submoduleSummary = true
[diff]
    submodule = log
    tool = gvimdiff
[alias]
	su = submodule update --init --recursive
    br = branch
    co = checkout
	ci = commit
	st = status
    re = restore
	logo = log --oneline --graph --decorate --date=short --abbrev-commit
	cleanup = !git fetch -p && git branch -vv | grep \": gone]\" | awk \"{print \\$1}\" | xargs -r git branch -D
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
